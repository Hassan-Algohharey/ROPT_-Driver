<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="3dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="3dp"
    tools:ignore="PrivateResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_place_scheduled"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:padding="5dp"
                android:src="@drawable/ic_image_gray_75dp"
                app:civ_border_color="@color/cardview_shadow_start_color" />

            <TextView
                android:id="@+id/phone_scheduled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_local_phone_black_24dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/price_scheduled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#00FF00"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="vertical"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/date_scheduled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/from_scheduled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/curv_text_view"
                android:drawableStart="@drawable/ic_pin_drop_blue_24dp"
                android:drawablePadding="10dp"
                android:includeFontPadding="false"
                android:text=""
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="1dp"
                android:paddingBottom="1dp">

                <View
                    android:id="@+id/view6"
                    android:layout_width="2dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="16dp"
                    android:background="@color/colorAccent" />

                <TextView
                    android:id="@+id/distance_scheduled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_near_me_black_24dp"
                    android:text=""
                    android:textColor="#000000" />

                <View
                    android:id="@+id/view7"
                    android:layout_width="2dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="16dp"
                    android:background="@color/colorAccent" />
            </LinearLayout>

            <TextView
                android:id="@+id/to_scheduled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/curv_text_view"
                android:drawableStart="@drawable/ic_pin_drop_red_24dp"
                android:drawablePadding="10dp"
                android:includeFontPadding="false"
                android:text=""
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textViw13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="@string/underway"
                android:textColor="#FF0000"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>